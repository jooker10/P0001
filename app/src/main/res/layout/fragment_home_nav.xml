<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".navfragments.HomeNavFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:background="@drawable/title_app_txt_bg"
        android:layout_marginVertical="16dp"
        android:textStyle="bold|italic"
        android:text="Learning English" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:text="Your previous Score " />

    <com.google.android.material.chip.ChipGroup
        app:singleSelection="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Verbs"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentenses"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phrasal Verbs"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/hightScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hight score"
        android:textSize="30sp"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:textColor="@color/black"/>


</LinearLayout>