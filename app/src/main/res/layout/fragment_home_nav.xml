<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navfragments.HomeNavFragment">

    <RelativeLayout
        android:id="@+id/relative_waves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:background="@color/gray_200"
            android:padding="2dp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/ic_person_24"
            app:strokeColor="?colorPrimary"
            app:strokeWidth="3dp" />
        <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-14dp"
            android:layout_marginBottom="-14dp"
            android:layout_alignRight="@+id/img_profile"
            android:layout_alignBottom="@+id/img_profile"
            android:backgroundTint="?colorSecondary"
            app:fabSize="mini"
            android:src="@drawable/ic_photo_camera_24"/>-->
        <TextView
            android:id="@+id/fabPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="-10dp"
            android:layout_alignRight="@+id/img_profile"
            android:layout_alignBottom="@+id/img_profile"
            android:textSize="30sp"

            android:textColor="?colorPrimary"
            android:text="+"/>

        <TextView
            android:id="@+id/home_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/cagliostro"
            android:gravity="center"
            android:padding="4dp"
            android:text="userName"
            android:textColor="@color/blue_500"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_txt_welcomeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_waves"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Welcome user"
        android:textColor="@color/txt_color"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/home_btn_toLearn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_txt_welcomeUser"
        android:layout_centerInParent="true"
        android:text="Learn first" />
    <Button
        android:id="@+id/home_btn_toQuiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="test your self"
        android:layout_centerInParent="true"
        android:layout_below="@id/home_btn_toLearn"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_below="@id/home_btn_toQuiz">

        <LinearLayout
            android:id="@+id/layout_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Total Score :"
                    android:textColor="@color/blue_500"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_tv_totalScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="right"
                    android:paddingRight="16dp"
                    android:text="0"
                    android:textColor="@color/blue_500"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Verbs Score :"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_tv_verbScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"
                    android:gravity="right"
                    android:paddingRight="16dp"
                    android:text="0"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Sentences Score :"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_tv_snetenceScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right"
                    android:paddingRight="16dp"
                    android:text="0"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="Phrasal Score :"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_tv_phrasalScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="right"
                    android:paddingRight="16dp"
                    android:text="0"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layout_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="60dp">

        <ImageView
            android:id="@+id/img_facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_facebook"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_twitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/img_facebook"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_twitter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_whatsapp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/img_twitter"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_whatsapp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/img_whatsapp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_instgram"
            android:visibility="gone" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/home_fab_share"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/img_instagram"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:src="@drawable/ic_share_24"
            app:backgroundTint="#CBD6D6" />
    </RelativeLayout>


</RelativeLayout>