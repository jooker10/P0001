<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".navfragments.QuizNavFragment">

    <HorizontalScrollView
        android:id="@+id/fragchoices_scrollH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingVertical="4dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/choicesFrag_chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/choicesFrag_chipverbs"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Verbs" />

            <com.google.android.material.chip.Chip
                android:id="@+id/choicesFrag_chipsentenses"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sentences" />

            <com.google.android.material.chip.Chip
                android:id="@+id/choicesFrag_chipPV"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phrasal verbs" />

            <com.google.android.material.chip.Chip
                android:id="@+id/choicesFrag_chipAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/choicesFrag_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score : 0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/choicesFrag_tv_qstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qst x/y"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="32dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choicesFrag_TVQst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Qst 1 : Quelle est la traduction du verbe : "
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/choicesFrag_theVerbQst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/shape_root_contaner"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:text="verb" />

            <RadioGroup
                android:id="@+id/choicesFrag_radioGroup_choices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_root_contaner">

                <RadioButton
                    android:id="@+id/choicesFrag_option0"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/choicesFrag_option1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/choicesFrag_option2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic" />


            </RadioGroup>

            <Button
                android:id="@+id/choicesFrag_Btn_confirmNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Confirm" />

            <androidx.cardview.widget.CardView
                android:id="@+id/choicesFrag_card_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/choicesFrag_tv_notes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/cagliostro"
                    android:text="Good your Answers is Correct"
                    android:textColor="@color/teal_700"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>