<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/background_white_900"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/custom_secondary"
        android:orientation="horizontal"
        android:padding="8dp">


        <TextView
            android:id="@+id/tvQuizUserScoreCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score : 0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCounterDownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="15"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuizCurrentCounterCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Qst --/--"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@color/background_white_900"
        android:elevation="32dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white_900"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuizMainQuestionCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="Choisissez la bonne rÃ©ponse : "
                android:textColor="@color/txt_gray_800_100"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/QuizTheMainElementOfCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginBottom="0dp"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="5dp"
                android:textColor="@color/custom_secondary"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                tools:text="verb" />

            <RadioGroup
                android:id="@+id/quizRadioGroupCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_root_container"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/QuizCategoryOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_radio_options"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="option 1"
                    android:textColor="@color/txt_gray_800_100"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/QuizCategoryOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_radio_options"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="option 1"
                    android:textColor="@color/txt_gray_800_100"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <RadioButton
                    android:id="@+id/QuizCategoryOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/selector_radio_options"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="option 2"
                    android:textColor="@color/txt_gray_800_100"
                    android:textSize="16sp"
                    android:textStyle="italic" />


            </RadioGroup>

            <Button
                android:id="@+id/btnConfirmNextCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@drawable/selector_btn_bg_enabled_state"
                android:textColor="@drawable/selector_btn_txt_enabled_state"
                android:text="Confirm" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/quizTvNotesCategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    tools:text="Choose an answer"
                    android:textSize="20sp"
                     />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>